<Window x:Class="SolidByExample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SolidByExample"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Label Content="Enter the Number of the Post you wish to fetch!"></Label>
        <TextBox x:Name="InputTextBox" HorizontalAlignment="Left" Height="23" Margin="10,22,0,0" TextWrapping="Wrap" Text="1" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="PostButton" Content="Get Post" HorizontalAlignment="Left" Margin="10,50,0,0" VerticalAlignment="Top" Width="75" Click="PostButton_Click"/>
        <Label x:Name="ErrorLabel" Content="You must enter a valid integer!" Visibility="Hidden" Foreground="Red" HorizontalAlignment="Left" Margin="135,22,0,0" VerticalAlignment="Top"/>
        <Label x:Name="TitleLabel" Content="TEST" FontWeight="Bold" HorizontalAlignment="Left" Margin="10,75,0,0" VerticalAlignment="Top"/>
        <Label x:Name="BodyLabel" Content="TEST" HorizontalAlignment="Left" Margin="10,100,0,0" VerticalAlignment="Top"/>
        <Label x:Name="UserLabel" Content="TEST" HorizontalAlignment="Left" Margin="10,178,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
